<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:tag="background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/nothing_to_say"
        app:srcCompat="@drawable/bg"/>
    <ImageView
        android:id="@+id/crownLogo"
        android:tag="crown logo"
        android:layout_width="@dimen/crown_logo_width"
        android:layout_height="@dimen/crown_logo_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/nothing_to_say"
        app:srcCompat="@drawable/crown_logo"/>
    <ImageView
        android:id="@+id/loadingIcon"
        android:layout_width="@dimen/loading_icon_size"
        android:layout_height="@dimen/loading_icon_size"
        android:tag="loading icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintTop_toBottomOf="@+id/crownLogo"
        android:contentDescription="@string/nothing_to_say"
        app:srcCompat="@drawable/loading"/>
</androidx.constraintlayout.widget.ConstraintLayout>